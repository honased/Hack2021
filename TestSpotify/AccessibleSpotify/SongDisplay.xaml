<UserControl x:Class="AccessibleSpotify.SongDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AccessibleSpotify"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="10, 0, 0, 0">
        <DockPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            </Style>
        </DockPanel.Resources>
        <Image DockPanel.Dock="Left" Source="{Binding Path=Image}" Width="150" Height="150" Margin="0 0 10 0"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Orientation="Vertical" >
                <TextBlock Text="{Binding Path=Name}" FontWeight="Bold"/>
                <TextBlock Text="{Binding Path=ArtistNames}" FontSize="24" TextWrapping="WrapWithOverflow"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
